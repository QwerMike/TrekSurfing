@model TrekSurfing.Web.Models.TrekEvent

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>@Model.Name</h2>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <td colspan="2">
                    <img src="/Event/RetrieveImage/@Model.Id" alt="" height=100 width=200 />
                </td>
            </tr>
            <tr>
                <td>Owner:</td>
                <td>@Model.Owner.UserName</td>
            </tr>
            <tr>
                <td>Starts:</td>
                <td>@Model.Starts</td>
            </tr>
            <tr>
                <td>Ends:</td>
                <td>@Model.Ends</td>
            </tr>
            <tr>
                <td>Route:</td>
                <td>@Model.Route</td>
            </tr>
            <tr>
                <td colspan="2">Description:<br />@Model.Description</td>
            </tr>
        </table>
    </div>
</div>